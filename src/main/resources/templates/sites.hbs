{{#partial "content"}}

    <div class="card" style="width:400px">
        {{#if Site}}
        <ul>
            {{#each Site}}
            <li> <a href="/Sites/{{id}}">{{site_name}}{{county}}</a> </li>
            {{/each}}
        </ul>
        {{else}}
        <p>No Sites added!</p>
        {{/if}}

        <a href="/Sites/new">Add New Site</a>
    </div>



<div class="engineer-content container">
    <h1 class="engineer-heading"> SITES</h1>
    <table class="table table-dark">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Site Name</th>
            <th scope="col">county</th>
        </tr>
        </thead>
        <tbody>
        {{#each Site }}
        <tr>
            <td>{{site_name}}</td>
            <td>{{county}}</td>

            <td>
                <a href="/Site/{{id}}" class="btn btn-primary btn-sm">View</a>
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
    <a class="btn btn-outline-light nav-item" href="/site/new"> NEW SITE </a>
</div>

{{/partial}}
{{>layout.hbs}}