{{#partial "content"}}

    <body class="add-site">
    <div class="card container site-form">
        <h2 class="add-engineer-title"> Edit Engineer</h2>
        <form action="/Engineer/{{Engineer.getId}}/edit" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" name="firstName" id="firstName" placeholder="John" value="{{Engineer.getFirstName}}">
                </div>
                <div class="form-group col-md-6">
                    <label for="secondName">Second Name</label>
                    <input type="text" class="form-control" name="secondName" id="secondName" placeholder="Doe" value="{{Engineer.getSecondName}}">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Email">Email</label>
                    <input type="text" class="form-control" name="Email" id="Email" placeholder="xx@xx.xxx" value="{{Engineer.getEmail}}">
                </div>
            </div>
            <button type="submit" class="btn btn-success">Update</button>
        </form>
    </div>

    </body>

{{/partial}}
{{>layout.hbs}}