{{#partial "content"}}

<div class="container">
    <div class="row">
        <div class="col-md-6">
                            <div class="text-white text-center d-flex align-items-center rgba-black-strong py-5 px-4">
                    <h1>Add a site to {{firstName}}{{secondName}}</h1>

                    <form action="/Engineers/{{id}}/Engineer" method="post">
                        <input id=engineerId" name="engineerId" type="hidden" value="{{id}}">

                        <div class="form-group">
                            <label for="site_name">Site Name</label>
                            <input id="site_name" name="site_name" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="county">County</label>
                            <input id="county" name="county" type="text" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-success">Add Site</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{/partial}}
{{>layout.hbs}}