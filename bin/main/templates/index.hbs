{{#partial "content"}}
    <div class="container">
        <div class="jumbotron">
            <div class="row">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h2> All Lists: </h2>

            {{#if Engineer}}
            <p>Click on a engineer to see his/her sites:</p>
            <ul>
                {{#each Engineer }}
                <li><a href="/Engineer/{{ Engineer.getEngineerId}}">{{Engineer.getFirstName}}</a></li>
                {{/each}}
            </ul>
            {{else}}
            <p>There are no Engineers yet!</p>
            {{/if}}
        </div>

        <div class="col-md-4">
            <h2>New Engineer:</h2>

            <form action="/Engineer" method="post">
                <div class="form-group col-md-6">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" name="firstName" id="firstName">
                </div>
                <div class="form-group col-md-6">
                    <label for="secondName">Second Name</label>
                    <input type="text" class="form-control" name="secondName" id="secondName">
                </div>
                <button type="submit" class="btn btn-success">Add Engineer</button>
            </form>
        </div>

        <div class="col-md-4">
            <h2>New Site:</h2>

            <form action="/Site" method="post">
                <label for="engineerId">Select a List</label>
                <select id='engineerId' name='engineerId' type='text'>
                    {{#each Engineer}}
                    <option value="{{Engineer.getId}}">{{Engineer.getFirstName}}</option>
                    {{/each}}
                </select>
                <div class="form-group col-md-6">
                    <label for="site_name">Site Name</label>
                    <input type="text" class="form-control" id="site_name"  name="site_name">
                </div>

                <button type="submit" class="btn btn-success">Add Site</button>
            </form>
        </div>
    </div>


